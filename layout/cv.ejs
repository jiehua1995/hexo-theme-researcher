<div class="container mx-auto px-4">
  <h1 class="text-4xl font-extrabold mb-8 text-base-content">Curriculum Vitae</h1>

  <!-- Jump to section -->
  <p class="mb-2 text-base-content font-medium">Click a section below to jump to it:</p>
  <nav class="flex flex-wrap gap-2 mb-6">
    <a href="#education" class="btn btn-outline btn-secondary">Education</a>
    <a href="#experience" class="btn btn-outline btn-secondary">Experience</a>
    <a href="#skills" class="btn btn-outline btn-secondary">Skills</a>
    <a href="#awards" class="btn btn-outline btn-secondary">Awards</a>
    <a href="#languages" class="btn btn-outline btn-secondary">Languages</a>
  </nav>

  <!-- Download CV -->
  <div class="text-right mb-8 flex justify-end items-center space-x-2">
    <% if (theme.cv && theme.cv.download_link) { %>
      <a href="<%= theme.cv.download_link %>" 
         class="btn btn-primary glass-button inline-flex items-center space-x-2 px-4 py-2"
         target="_blank" rel="noopener noreferrer" 
         title="Download PDF" 
         download>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <span>Download PDF</span>
      </a>
    <% } else { %>
      <button onclick="alert('Sorry, CV PDF is currently unavailable')" 
              class="btn btn-primary glass-button inline-flex items-center space-x-2 px-4 py-2" 
              title="Download PDF" 
              type="button">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <span>Download PDF</span>
      </button>
    <% } %>
  </div>
  

  <!-- Education -->
  <section class="mb-8" id="education">
    <h2 class="text-2xl font-bold mb-4 text-base-content">Education</h2>
    <div class="grid gap-6">
      <% site.data.cv.education.forEach(function(edu) { %>
        <div class="card glass rounded-box shadow-lg bg-base-100 text-base-content hover:shadow-xl transition-all duration-300">
          <div class="card-body">
            <h2 class="card-title text-xl font-bold flex flex-wrap gap-2 items-start">
            <%= edu.degree %>
            <% if (edu.period) { %>
              <div class="badge badge-primary badge-sm lg:badge-md whitespace-nowrap"><%= edu.period %></div>
            <% } %>
            </h2>

            <div class="text-base-content opacity-80">
              <p class="font-medium"><%= edu.institution %></p>
              <% if (edu.description) { %>
                <p class="mt-2 opacity-90"><%= edu.description %></p>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- Professional Experience -->
  <section class="mb-8" id="experience">
    <h2 class="text-2xl font-bold mb-4 text-base-content">Professional Experience</h2>
    <div class="grid gap-6">
      <% site.data.cv.experience.forEach(function(exp) { %>
        <div class="card glass rounded-box shadow-lg bg-base-100 text-base-content hover:shadow-xl transition-all duration-300">
          <div class="card-body">
            <h2 class="card-title text-xl font-bold">
              <%= exp.position %>
              <% if (exp.period) { %>
                <div class="badge badge-primary"><%= exp.period %></div>
              <% } %>
            </h2>
            <div class="text-base-content opacity-80">
              <p class="font-medium"><%= exp.institution %></p>
              <p class="mt-2 opacity-90"><%= exp.description %></p>
              <% if (exp.responsibilities) { %>
                <ul class="list-disc list-inside mt-3 opacity-90">
                  <% exp.responsibilities.forEach(function(resp) { %>
                    <li><%= resp %></li>
                  <% }); %>
                </ul>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- Skills -->
  <section class="mb-8" id="skills">
    <h2 class="text-2xl font-bold mb-4 text-base-content">Skills</h2>
    <div class="grid gap-6">
      <% for (const [category, skills] of Object.entries(site.data.cv.skills)) { %>
        <div class="card glass rounded-box shadow-lg bg-base-100 text-base-content hover:shadow-xl transition-all duration-300">
          <div class="card-body">
            <h2 class="card-title text-xl font-bold mb-4"><%= category %></h2>
            <div class="flex flex-wrap gap-3">
              <% skills.forEach(function(skill) { %>
                <span class="badge badge-primary cursor-default">
                  <%= skill %>
                </span>
                
                
                
              <% }); %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </section>

  <!-- Awards & Honors -->
  <section class="mb-8" id="awards">
    <h2 class="text-2xl font-bold mb-4 text-base-content">Awards & Honors</h2>
    <div class="grid gap-6">
      <% site.data.cv.awards.forEach(function(award) { %>
        <div class="card glass rounded-box shadow-lg bg-base-100 text-base-content hover:shadow-xl transition-all duration-300">
          <div class="card-body">
            <h2 class="card-title text-xl font-bold flex flex-wrap gap-2 items-start">
              <%= award.title %>
              <% if (award.date) { %>
                <div class="badge badge-primary badge-xs lg:badge-md whitespace-nowrap"><%= award.date %></div>
              <% } %>
            </h2>
            <div class="text-base-content opacity-80">
              <p class="font-medium"><%= award.issuer %></p>
              <% if (award.description) { %>
                <p class="mt-2 opacity-90"><%= award.description %></p>
              <% } %>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </section>

  <!-- Languages -->
  <section class="mb-8" id="languages">
  <h2 class="text-2xl font-bold mb-4 text-base-content">Languages</h2>
  <div class="card glass rounded-box shadow-lg bg-base-100 text-base-content hover:shadow-xl transition-all duration-300 p-6">
    <div class="flex flex-wrap gap-3">
      <% site.data.cv.languages.forEach(function(lang) { %>
        <div class="px-4 py-4 bg-base-200 rounded-md shadow-sm text-sm flex items-center gap-2 whitespace-nowrap">
          <span class="font-semibold"><%= lang.name %></span>
          <span class="text-xs opacity-70">(<%= lang.level %>)</span>
        </div>
      <% }); %>
    </div>
  </div>
</section>




</div>
